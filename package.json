{
    "name": "carta-frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@blueprintjs/core": "^2.2.1",
        "golden-layout": "^1.5.9",
        "konva": "^2.0.3",
        "lodash": "^4.17.10",
        "mobx": "^4.2.0",
        "mobx-react": "^5.0.0",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-flexbox-grid": "^2.0.0",
        "react-konva": "^1.7.2",
        "react-resize-detector": "^2.3.0",
        "react-scripts-ts": "2.15.1",
        "react-transition-group": "^2.3.1"
    },
    "scripts": {
        "build-css": "node-sass-chokidar -q src/ -o src/",
        "watch-css": "npm run build-css && node-sass-chokidar -q src/ -o src/ --watch --recursive",
        "build-wrappers": "./wasm_src/build_wrappers.sh",
        "watch-wrappers": "./wasm_src/build_wrappers.sh --watch",
        "build-protobuf": "./protobuf/build_proto.sh",
        "watch-protobuf": "npx chokidar --initial -d 4000 './protobuf/**/*.proto' -c './protobuf/build_proto.sh'",
        "start-js": "react-scripts-ts start",
        "start": "npm-run-all -p watch-css start-js watch-wrappers watch-protobuf",
        "build-js": "react-scripts-ts build",
        "build": "npm-run-all build-wrappers build-protobuf build-css build-js",
        "test": "react-scripts-ts test --env=jsdom",
        "eject": "react-scripts-ts eject"
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/jquery": "^3.3.1",
        "@types/lodash": "^4.14.108",
        "@types/node": "^9.6.7",
        "@types/react": "^16.3.13",
        "@types/react-dom": "^16.0.5",
        "@types/react-resize-detector": "^2.1.0",
        "chokidar-cli": "^1.2.0",
        "node-sass-chokidar": "^1.2.2",
        "npm-run-all": "^4.1.2",
        "protobufjs": "^6.8.6",
        "typescript": "^2.8.3"
    }
}
